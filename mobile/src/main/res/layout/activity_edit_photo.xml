<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >
    <uk.co.senab.photoview.PhotoView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#80000000"
        android:layout_above="@+id/gallery_linear_layout">

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" >
        </Space>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageButtonDiscard"
            android:background="@drawable/ic_action_cancel"

            android:onClick="clickDiscard"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" >
        </Space>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageButtonSave"
            android:background="@drawable/ic_action_save"

            android:onClick="clickSave"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" >
        </Space>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/gallery_linear_layout"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <HorizontalScrollView
            android:id="@+id/hor_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#80000000"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <LinearLayout
                android:id="@+id/gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/frame_02_small"
                    android:onClick="biggerView"/>
                <!--<ImageView
                    android:id="@+id/image2"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/frame_02_small"
                    android:onClick="biggerView"/>
                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/frame2"
                    android:onClick="biggerView"/>
                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/frame3"
                    android:onClick="biggerView"/>
                <ImageView
                    android:id="@+id/image5"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/frame4"
                    android:onClick="biggerView"/>
                <ImageView
                    android:id="@+id/image6"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/frame5"
                    android:onClick="biggerView"/>
                <ImageView
                    android:id="@+id/image7"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/frame6"
                    android:onClick="biggerView"/>
                <ImageView
                    android:id="@+id/image8"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/frame_08"
                    android:onClick="biggerView"/>
                <ImageView
                    android:id="@+id/image9"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/frame_09"
                    android:onClick="biggerView"/>
                <ImageView
                    android:id="@+id/image10"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
