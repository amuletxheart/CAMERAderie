<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="50dp"
    android:paddingBottom="50dp">

    <RelativeLayout
        android:id="@+id/facebookLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:clickable="true" >

        <ImageView
            android:id="@+id/image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:paddingLeft="10dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_facebook_activity" />

        <TextView
            android:id="@+id/text"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Facebook"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/image"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/twitterLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/facebookLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:clickable="true" >
        <ImageView
            android:id="@+id/image1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:paddingLeft="10dp"
            android:contentDescription="@string/app_name"
            android:scaleType="centerInside"
            android:src="@drawable/twitter" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="Twitter"
            android:layout_toRightOf="@+id/image1"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/instagramLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/twitterLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:clickable="true" >

        <ImageView
            android:id="@+id/image2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:paddingLeft="10dp"
            android:contentDescription="@string/app_name"
            android:scaleType="centerInside"
            android:src="@drawable/instagram" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="Instagram"
            android:layout_toRightOf="@+id/image2"  />
    </RelativeLayout>
</RelativeLayout>